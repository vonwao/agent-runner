{
  "agent": {
    "name": "dual-llm-orchestrator",
    "version": "1"
  },
  "repo": {
    "default_branch": "main"
  },
  "scope": {
    "allowlist": [
      "src/commands/report.ts",
      "src/commands/compare.ts",
      "src/context/**",
      "docs/**"
    ],
    "denylist": [
      "src/supervisor/**",
      "src/store/**",
      "src/workers/**",
      "src/commands/run.ts",
      "src/commands/resume.ts",
      "src/commands/preflight.ts",
      "src/commands/guards-only.ts",
      "src/config/**",
      "src/cli.ts",
      "src/types/**"
    ],
    "lockfiles": ["package-lock.json", "pnpm-lock.yaml", "yarn.lock"]
  },
  "verification": {
    "tier0": ["pnpm build", "pnpm test"],
    "tier1": ["pnpm test"],
    "tier2": ["pnpm test"],
    "risk_triggers": [],
    "max_verify_time_per_milestone": 300
  },
  "workers": {
    "codex": {
      "bin": "codex",
      "args": ["exec", "--full-auto", "--json"],
      "output": "jsonl"
    },
    "claude": {
      "bin": "claude",
      "args": ["-p", "--output-format", "json", "--dangerously-skip-permissions"],
      "output": "json"
    }
  },
  "phases": {
    "plan": "claude",
    "implement": "claude",
    "review": "claude"
  }
}
